<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Headline -->
    <style name="PageHeadlineItemTextAppearance">
        <item name="android:textSize">@dimen/headline_text</item>
        <item name="android:textColor">?attr/eveusMainText</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <!-- Texts -->
    <style name="MainItemTextAppearance">
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:textColor">?attr/eveusMainText</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>


    <!-- IP EditText Style-->
    <style name="IPEditTextStyle">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/background_ip_selector</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>